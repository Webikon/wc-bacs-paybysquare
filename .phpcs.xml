<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="PHP_CodeSniffer" xsi:noNamespaceSchemaLocation="phpcs.xsd">
	<config
		name="installed_paths"
		value="vendor/phpcsstandards/phpcsextra,vendor/phpcsstandards/phpcsutils,vendor/wp-coding-standards/wpcs"
	/>
	<rule ref="WordPress" />

	<!-- Override array syntax preference: [] instead array() -->
	<rule ref="Universal.Arrays.DisallowShortArraySyntax.Found">
		<exclude-pattern>*</exclude-pattern>
	</rule>
	<rule ref="Generic.Arrays.DisallowLongArraySyntax" />
</ruleset>
